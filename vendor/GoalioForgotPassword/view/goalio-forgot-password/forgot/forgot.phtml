 <?php
 $title = 'Forgot Your Password?';
 $this->headTitle($title);
 ?>
<h3><?php echo $this->escapeHtml($title); ?></h3>

<?php
$form = $this->forgotForm;
$form->prepare();
$form->setAttribute('action', $this->url('zfcuser/forgotpassword'));
$form->setAttribute('method', 'post');
?>

<?php echo $this->form()->openTag($form) ?>

    <dl id="login" class="zend_form" style="width:25%">
        <?php echo $this->formElementErrors($form->get('email')) ?>

        <dt><?php echo $this->formLabel($form->get('email')) ?></dt>
        <dd><?php echo $this->formInput($form->get('email')) ?></dd>
		<br/>
        <dd><?php echo $this->formButton($form->get('submit')) ?></dd>
    </dl>

<?php echo $this->form()->closeTag() ?>

<a href="<?php echo $this->url('zfcuser/login') ?>">Back to login?</a>
